<Window x:Class="projet.view.PlayerRankingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Ranking" Height="450" Width="800">
    <Grid>
        <!-- Schedule Type TextBlock -->
        <TextBlock Name="scheduleTypeTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="18" FontWeight="Bold"/>

        <!-- Player Rankings ListBox -->
        <ListBox Name="rankingsListBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" Background="#F0F0F0" Width="400" Height="300">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="16" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Back to Winners Window Button -->
        <Button Content="Back to Winners" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="BackToWinnersWindow_Click"/>
    </Grid>
</Window>
