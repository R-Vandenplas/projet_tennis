<Window x:Class="projet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet"
        mc:Ignorable="d"
        Title="Grand Slam Tournament" Height="800" Width="1200"
        Background="#27378a">
	<Grid>
		<StackPanel VerticalAlignment="Center">

			<!-- Welcome Text -->
			<TextBlock Text="Welcome to the Grand Slam Tournament" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="White"/>

			<!-- Tournament Name Input -->
			<TextBlock Text="Please, enter the name of the tournament" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="White"/>
			<TextBox Name="tournamentNameTextBox" Width="200" HorizontalAlignment="Center" Margin="0,0,0,10" />

			<!-- Launch Tournament Button -->
			<Button Content="Launch Tournament" HorizontalAlignment="Center" Click="LaunchTournament_Click"/>

		</StackPanel>
	</Grid>
</Window>
